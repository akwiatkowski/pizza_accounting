= simple_form_for [@group, @transaction] do |f|
  = f.input :amount
  = f.input :direction, collection: Transaction::DIRECTIONS
  = f.input :desc
  = f.input :payer_id, collection: @group.users, label_method: :email
  = f.submit

- if false
  = form_for @transaction do |f|
    - if @transaction.errors.any?
      #error_explanation
        %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
        %ul
          - @transaction.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :amount
      = f.text_field :amount
    .field
      = f.label :direction
      = f.number_field :direction
    .field
      = f.label :desc
      = f.text_field :desc
    .actions
      = f.submit 'Save'
